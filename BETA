if(mouseInBox(365,1+hoty,40,35)){mouseClicked=function(){scene='menu';};
mbo-=0.5;
fill(93, 112, 0);
rect(379+mbo+2,7+hoty,5-mbo+1,20);
}
if(!mouseInBox(365,1+hoty,40,35)){mouseClicked=function(){scene='menu';};
mbo+=0.5;
}
if(mbo<-7){mbo=-7;}
if(mbo>0){mbo=0;}
//book button
fill(255, 0, 0);
rect(328,6+hoty,5,20);
fill(255, 145, 0);
rect(333,6+hoty,19,20);
