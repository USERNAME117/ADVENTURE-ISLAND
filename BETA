//hotbar
draw= function() {
if(scene==='menu'){
 menu();   
}
if(scene==='How2'){
 how2();   

}
if(scene==='credits'){
 credits();   

}
if(scene==='Play'){
    play();
}
if(scene==='story'){
    story();}
if(scene==='map'){
    islandmap();}
if(scene==='book'){
    bookoflegend();
}
if(scene==='comblegend'){
    cl();
}
if(scene==='firelegend'){
    fl();
}
if(scene==='waterlegend'){
    wl();
}
if(scene==='lightlegend'){
    ll();
}
if(scene==='darklegend'){
    dl();
}
};
