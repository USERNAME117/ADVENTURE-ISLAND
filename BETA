if(hoty<-30){hoty=-30;}
fill(181, 186, 31);
//menu button design
rect(385,6+hoty,5,20);
rect(379+mbo,6+hoty,5,20);
fill(255, 174, 0);
ellipse(389,5+hoty,7,5);
ellipse(380+mbo,5+hoty,7,5);
ellipse(389,27+hoty,7,5);
ellipse(380+mbo,27+hoty,7,5);
