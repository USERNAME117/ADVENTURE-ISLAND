rect(50,6+hoty,25,25);
rect(100,6+hoty,25,25);
rect(150,6+hoty,25,25);
rect(200,6+hoty,25,25);
rect(250,6+hoty,25,25);
if(fire==='true'){
    fill(255, 0, 0);
    rect(50,6+hoty,25,25);
}
if(water==='true'){
    fill(0, 34, 255);
    rect(100,6+hoty,25,25);
}
if(dark==='true'){
    fill(0, 0, 0);
    rect(150,6+hoty,25,25);
}
if(light==='true'){
    fill(255, 255, 255);
    rect(200,6+hoty,25,25);
}
if(comb==='true'){
    fill(random(1,255), random(1,255), random(1,255));
    rect(250,6+hoty,25,25);
}
};
